<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"

            android:layout_height="220dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bet_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="96dp"
                android:fontFamily="@font/gilroyblack"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/selected_num"/>


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-50dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingTop="20dp"
                   android:paddingStart="20dp"
                   android:paddingEnd="20dp"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:weightSum="2"
                       android:gravity="center"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:textAlignment="center"
                           android:textSize="20sp"
                           android:fontFamily="@font/gilroybold"
                           android:text="Bet 500 get 900"
                           android:textStyle="bold"
                           android:id="@+id/title_bet"
                          />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="Please Choose One of Below Numbers"
                           android:id="@+id/amt_bet"/>

                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="120dp"
                       android:weightSum="2"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:layout_weight="1"
                           android:text="10"
                           android:textColor="@color/colorPrimary"
                           android:textSize="28sp"
                           android:gravity="center"
                           android:textAlignment="center"
                           android:background="@drawable/opt_background"
                           android:id="@+id/op1"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="10"
                           android:textColor="@color/colorPrimary"
                           android:textSize="28sp"
                           android:gravity="center"
                           android:background="@drawable/opt_background"
                           android:id="@+id/op2"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="120dp"
                       android:weightSum="2"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:layout_weight="1"
                           android:text="10"
                           android:textColor="@color/colorPrimary"
                           android:textSize="28sp"
                           android:gravity="center"
                           android:background="@drawable/opt_background"
                           android:id="@+id/op3"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="10"
                           android:textColor="@color/colorPrimary"
                           android:textSize="28sp"
                           android:gravity="center"
                           android:background="@drawable/opt_background"
                           android:id="@+id/op4"/>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="120dp"
                       android:weightSum="2"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="120dp"
                           android:layout_height="120dp"
                           android:layout_weight="1"
                           android:text="10"
                           android:textColor="@color/colorPrimary"
                           android:textSize="28sp"
                           android:gravity="center"
                           android:background="@drawable/opt_background"
                           android:id="@+id/op5"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:text="10"
                           android:textColor="@color/colorPrimary"
                           android:textSize="28sp"
                           android:gravity="center"
                           android:background="@drawable/opt_background"
                           android:id="@+id/op6"/>

                   </LinearLayout>
               </LinearLayout>






                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:id="@+id/paybtn"
                    android:text="PAY 100"
                    android:textColor="#ffffff"/>




            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>